# Production Environment Variables Template
# DO NOT COMMIT SECRETS TO REPOSITORY

# Node Environment
NODE_ENV=production

# Database Configuration
# In Docker Compose, 'postgres' is the service name
DATABASE_URL="postgresql://jules:REPLACE_WITH_SECURE_PASSWORD@postgres:5432/sevra_atlas?schema=public"

# Redis Configuration
# In Docker Compose, 'redis_cache' and 'redis_queue' are service names
REDIS_URL="redis://redis_cache:6379"
REDIS_QUEUE_URL="redis://redis_queue:6379"

# Authentication (JWT)
# Generate secure 32+ character keys!
JWT_ACCESS_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING"
JWT_REFRESH_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING"
JWT_ACCESS_TTL=900
JWT_REFRESH_TTL=2592000

# SMS Provider Configuration
# Set to 'kavenegar' or 'smsir' for production
SMS_PROVIDER=mock
SMS_API_KEY=
SMSIR_API_KEY=
SMSIR_LINE_NUMBER=
SMSIR_TEMPLATE_ID=

# Storage Configuration
# Options: local, s3
STORAGE_PROVIDER=local
S3_ENDPOINT=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_PUBLIC_URL=

# AdminJS Configuration
# Generate a secure 32+ character key!
SESSION_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING"

# Server Configuration
PORT=3000

# Worker Configuration
ENABLE_ASYNC_WORKERS=true

# Domain for SSL (Nginx + Certbot)
DOMAIN=example.com
EMAIL=admin@example.com
